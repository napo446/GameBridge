    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { 
            getAuth, 
            GoogleAuthProvider, 
            signInWithPopup, 
            signInWithEmailAndPassword,
            fetchSignInMethodsForEmail 
        } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";
        // SAFE UPDATE: Firestore imports added
        import { getFirestore, doc, setDoc, serverTimestamp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

        const firebaseConfig = {
            apiKey: "AIzaSyCLd4MLONU_5OFie6WN2XmXmlMyfuJ5_8I",
            authDomain: "gamebridge-f4789.firebaseapp.com",
            projectId: "gamebridge-f4789",
            storageBucket: "gamebridge-f4789.firebasestorage.app",
            messagingSenderId: "562553872482",
            appId: "1:562553872482:web:02b34e7bc1b7a25af8f13b",
            measurementId: "G-X3B8B4L4XW"
        };

        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        const db = getFirestore(app); // INITIALIZED DB
        const provider = new GoogleAuthProvider();

        window.addEventListener('DOMContentLoaded', () => {
            if (localStorage.getItem('lastAuthMethod') === 'google') {
                document.getElementById('googleBtn').classList.add('prefer-google');
            }
        });

        document.getElementById('googleBtn').addEventListener('click', async () => {
            try {
                const result = await signInWithPopup(auth, provider);
                const user = result.user;
                
                // TRACK GOOGLE USERS IN FIRESTORE
                await setDoc(doc(db, "users", user.uid), {
                    email: user.email,
                    lastLogin: serverTimestamp(),
                    status: "Online"
                }, { merge: true });

                localStorage.setItem('lastAuthMethod', 'google');
                window.location.href = 'player-dashboard.html';
            } catch (error) {
                alert(error.message);
            }
        });

        document.getElementById('signUpBtn').addEventListener('click', () => {
            window.location.href = 'signup.html';
        });

        document.getElementById('loginBtn').addEventListener('click', async () => {
            const email = document.getElementById('email').value;
            const pass = document.getElementById('password').value;
            const ADMIN_ID = "ownergamebridge@gmail.com"; 

            if(!email || !pass) return alert("Please fill in your details.");

            try {
                const userCred = await signInWithEmailAndPassword(auth, email, pass);
                const user = userCred.user;

                if (user.email === ADMIN_ID) {
                    localStorage.setItem('lastAuthMethod', 'password');
                    alert("Welcome Back, Admin.");
                    window.location.href = 'admin-portal.html';
                } 
                else {
                    if (user.emailVerified) {
                        // SAFE UPDATE: Save player info to Firestore for Live List
                        await setDoc(doc(db, "users", user.uid), {
                            email: user.email,
                            lastLogin: serverTimestamp(),
                            status: "Online"
                        }, { merge: true });

                        localStorage.setItem('lastAuthMethod', 'password');
                        window.location.href = 'player-dashboard.html';
                    } else {
                        alert("Please verify your email first!");
                        await auth.signOut();
                    }
                }
            } catch (error) {
                if (error.code === 'auth/wrong-password' || error.code === 'auth/user-not-found') {
                    const methods = await fetchSignInMethodsForEmail(auth, email).catch(() => []);
                    if (methods.includes('google.com')) {
                        alert("It looks like you usually Sign in with Google. Please use the Google button!");
                    } else {
                        alert("Access Denied: Incorrect credentials.");
                    }
                } else {
                    alert(error.message);
                }
            }
        });
    </script>
