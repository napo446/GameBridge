<script type="module">
import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
import { getAuth, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";
import {
    getFirestore, collection, addDoc, deleteDoc, updateDoc, doc,
    onSnapshot, serverTimestamp, query, orderBy, limit
} from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

const firebaseConfig = {
    apiKey: "AIzaSyCLd4MLONU_5OFie6WN2XmXmlMyfuJ5_8I",
    authDomain: "gamebridge-f4789.firebaseapp.com",
    projectId: "gamebridge-f4789",
    storageBucket: "gamebridge-f4789.firebasestorage.app",
    messagingSenderId: "562553872482",
    appId: "1:562553872482:web:02b34e7bc1b7a25af8f13b"
};

const app = initializeApp(firebaseConfig);
const auth = getAuth(app);
const db = getFirestore(app);
const ADMIN_EMAIL = "ownergamebridge@gmail.com";

onAuthStateChanged(auth, u => {
    if (!u || u.email !== ADMIN_EMAIL) location.href = "index.html";
});

logoutBtn.onclick = () => signOut(auth).then(() => location.href = "index.html");

/* USERS */
onSnapshot(collection(db,"users"), snap => {
    playerCount.innerText = snap.size;
    userList.innerHTML = "";
    snap.forEach(d => {
        const u = d.data();
        userList.innerHTML += `
        <div class="p-3 bg-white/5 rounded-xl flex justify-between">
            <span>${u.email}</span>
            <button onclick="kick('${d.id}')" class="text-red-400 text-xs">KICK</button>
        </div>`;
    });
});
window.kick = id => confirm("Kick user?") && deleteDoc(doc(db,"users",id));

/* EVENTS (READ-ONLY ACCOUNTING) */
onSnapshot(query(collection(db,"events"), orderBy("timestamp","desc"), limit(25)), snap => {
    let total = 0;
    eventFeed.innerHTML = "";
    eventCount.innerText = snap.size;
    snap.forEach(d => {
        const e = d.data();
        total += e.value || 0;
        eventFeed.innerHTML += `
        <div class="p-3 bg-cyan-400/5 rounded-xl">
            <div class="flex justify-between font-bold">
                <span>${e.type}</span>
                <span class="text-green-400">+$${(e.value||0).toFixed(2)}</span>
            </div>
            <p class="text-xs text-gray-400">${e.userName} ‚Ä¢ ${e.gameName}</p>
        </div>`;
    });
    totalRevenue.innerText = `$${total.toFixed(2)}`;
});

/* INVENTORY */
onSnapshot(collection(db,"games"), snap => {
    gameCount.innerText = snap.size;
    inventoryTable.innerHTML = "";
    snap.forEach(d => {
        const g = d.data();
        inventoryTable.innerHTML += `
        <tr class="border-b border-white/5">
            <td>${g.title}</td>
            <td>${g.studio}</td>
            <td class="text-xs">Ad $${g.adPayout}<br>Ins $${g.installPayout}</td>
            <td class="text-xs">Lvl ${g.milestones?.level} ($${g.milestones?.payout})</td>
            <td class="text-green-400">$${(g.accumulatedRevenue||0).toFixed(2)}</td>
            <td><span class="status-pill">${g.status}</span></td>
            <td class="text-right">
                <button onclick="toggle('${d.id}','${g.status}')">‚èØ</button>
                <button onclick="del('${d.id}')" class="text-red-400">üóë</button>
            </td>
        </tr>`;
    });
});
window.toggle = (id,s) => updateDoc(doc(db,"games",id),{status:s==="active"?"disabled":"active"});
window.del = id => confirm("Delete game?") && deleteDoc(doc(db,"games",id));

/* DEPLOY */
addGameBtn.onclick = async () => {
    await addDoc(collection(db,"games"),{
        title: gameTitle.value,
        url: gameUrl.value,
        studio: studioName.value,
        adPayout: Number(adPayout.value),
        installPayout: Number(installPayout.value),
        milestones: { level:Number(targetLevel.value), payout:Number(levelPayout.value) },
        accumulatedRevenue: 0,
        status:"active",
        createdAt: serverTimestamp()
    });
    alert("Game deployed");
};
</script>

</body>
