<script type="module">
import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
import {
    getAuth,
    GoogleAuthProvider,
    signInWithPopup,
    signInWithEmailAndPassword,
    sendPasswordResetEmail
} from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";
import {
    getFirestore,
    doc,
    setDoc,
    addDoc,
    collection,
    serverTimestamp
} from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

const app = initializeApp({
    apiKey: "AIzaSyCLd4MLONU_5OFie6WN2XmXmlMyfuJ5_8I",
    authDomain: "gamebridge-f4789.firebaseapp.com",
    projectId: "gamebridge-f4789",
    storageBucket: "gamebridge-f4789.appspot.com",
    messagingSenderId: "562553872482",
    appId: "1:562553872482:web:02b34e7bc1b7a25af8f13b"
});

const auth = getAuth(app);
const db = getFirestore(app);
const provider = new GoogleAuthProvider();

const syncUser = user =>
    setDoc(doc(db, "users", user.uid), {
        email: user.email,
        lastLogin: serverTimestamp()
    }, { merge: true });

const logLogin = (user, method) =>
    addDoc(collection(db, "events"), {
        userId: user.uid,
        email: user.email,
        type: "login",
        method,
        timestamp: serverTimestamp()
    });

document.getElementById("googleBtn").onclick = async () => {
    const { user } = await signInWithPopup(auth, provider);
    const token = await user.getIdTokenResult();
    await syncUser(user);
    await logLogin(user, "google");
    location.href = token.claims.admin ? "admin-portal.html" : "player-dashboard.html";
};

document.getElementById("loginBtn").onclick = async () => {
    const emailVal = document.getElementById("email").value.trim();
    const pass = document.getElementById("password").value;
    if (!emailVal || !pass) return alert("Missing credentials");

    const { user } = await signInWithEmailAndPassword(auth, emailVal, pass);
    if (!user.emailVerified) return alert("Verify your email first");

    const token = await user.getIdTokenResult();
    await syncUser(user);
    await logLogin(user, "password");
    location.href = token.claims.admin ? "admin-portal.html" : "player-dashboard.html";
};

document.getElementById("forgotBtn").onclick = async () => {
    const emailVal = document.getElementById("email").value.trim();
    if (!emailVal) return alert("Enter email");
    await sendPasswordResetEmail(auth, emailVal);
    alert("Password reset sent");
};

document.getElementById("signUpBtn").onclick = () =>
    location.href = "signup.html";
</script>

</body>
</html>




